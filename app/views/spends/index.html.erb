<div class="container">
  <%= render partial: 'layouts/container-header' %>
  <div class="contents">
    <div class="contents-sub">
      <div class="switch-btns">
        <div class="spend-btn">支出</div>
        <div class="income-btn">収入</div>
      </div>
      <div class="form-header">
        <p>入力・編集フォーム</p>
        <p class="hide-form-btn pointer centering">▲</p>
        <p class="hide-form-btn pointer centering" style="display:none;">▼</p>
      </div>
      <div class="spend-form-wrapper">
        <form class="spend-form">
          <div class="spend-form-title centering">支出を登録</div>
        </form>
      </div>
      <div class="form-header">
        <p>26日の支出一覧</p>
        <p class="hide-form-btn pointer centering">▲</p>
        <p class="hide-form-btn pointer centering" style="display:none;">▼</p>
      </div>
      <div class="a-day-spend-list">
        <div class="a-day-spend-info">
          <p class="a-day-category-info centering">食費</p>
          <p class="a-day-money-info centering">1200円</p>
          <p class="a-day-memo-info">友人と外食に行った。</p>
        </div>
      </div>
    </div>
    <div class="contents-main">
      <div class="calendar-wrapper centering">
        <div class="calendar">
          <div class="week-row">
            <div class="week sunday centering">日</div>
            <div class="week centering">月</div>
            <div class="week centering">火</div>
            <div class="week centering">水</div>
            <div class="week centering">木</div>
            <div class="week centering">金</div>
            <div class="week saturday centering">土</div>
          </div>
          <div class="calendar-rows">
            <% 6.times do %>
              <div class="calendar-row">
                <div class="calendar-date sunday">
                  <p class="date-num centering">27</p>
                  <div class="date-sums">
                    <p class="spend-date-sum centering">1200円</p>
                    <p class="income-date-sum centering">3000円</p>
                  </div>
                </div>
                <% 5.times do %>
                  <div class="calendar-date">
                    <p class="date-num centering">28</p>
                    <div class="date-sums">
                      <p class="spend-date-sum centering">1200円</p>
                      <p class="income-date-sum centering">3000円</p>
                    </div>
                  </div>
                <% end %>
                <div class="calendar-date saturday">
                  <p class="date-num centering">2</p>
                  <div class="date-sums">
                    <p class="spend-date-sum centering">1200円</p>
                    <p class="income-date-sum centering">3000円</p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="contents-hidden">
    </div>
  </div>
</div>
